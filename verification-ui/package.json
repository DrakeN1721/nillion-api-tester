{
  "name": "nil-ai-verifier",
  "version": "1.0.0",
  "description": "Professional desktop app for validating Nillion API keys and generating verification reports - LOCAL USE ONLY",
  "main": "public/electron.cjs",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrakeN1721/nillion-api-tester.git"
  },
  "bugs": {
    "url": "https://github.com/DrakeN1721/nillion-api-tester/issues"
  },
  "keywords": [
    "nillion",
    "nil-ai",
    "api-key-verification",
    "validation",
    "testing",
    "electron",
    "react",
    "nillion-sdk",
    "development-tool",
    "local-development"
  ],
  "author": {
    "name": "DrakeN",
    "url": "https://draken.space",
    "twitter": "@draken1721"
  },
  "license": "MIT",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"PORT=4352 npm start\" \"wait-on http://localhost:4352 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "dependencies": {
    "@nillion/nilai-ts": "latest",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.1",
    "electron-is-dev": "^2.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "keytar": "^7.9.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "crypto-browserify": "^3.12.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nillion.nil-ai-verification",
    "productName": "Nil AI Key Verification",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
